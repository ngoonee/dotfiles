  #ffmpeg -i "$f"  -ab 192k "${f/.flac}.mp3"
#  ffmpeg -i "$f" -ab 128k -map_meta_data "${f}.mp3":"$f" "${f}.mp3"
  #ffmpeg -i "$f" -ab 192k "${f/.m4a}.mp3"
#  ffmpeg -i "$f" "${f}.flac"
  #convert -verbose -quality 100 -density 150 "$f" "${f/.pdf}.png"

done

