#!/bin/sh
for f in ./*.mp4;
do
  echo "Processing $f"
  ffmpeg -i "$f" -qscale 0 -ab 192k "${f/.mp4}.mpg"
#  ffmpeg -i "$f" -sameq -aspect 4:3 -vcodec libxvid -ab 128k "${f}.avi"
#  ffmpeg -i "$f" -sameq -vf "aspect=4:3" -vcodec libxvid -ab 128k "${f}.avi"
