IWBTGDIR="/home/data/Games/iwbtg"
WINEDIR="/home/data/Apps/wine32"

cd "$IWBTGDIR"

if [ "$(pidof pulseaudio)" ] ; then
    OSSCONVERTER=padsp
else
    OSSCONVERTER=aoss
fi

#WINEDEBUG=-all WINEPREFIX=$WINEDIR/iwbtg $OSSCONVERTER wine "iwbtgbeta(fs).exe"
WINEPREFIX=$WINEDIR $OSSCONVERTER wine "iwbtgbeta(fs).exe"

exit 0
