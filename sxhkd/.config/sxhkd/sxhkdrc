### Volume Control ###
XF86Audio{RaiseVolume,LowerVolume,Mute}
    volcontrol {up,down,mute}
shift + super + {q,a,s}
    volcontrol {up,down,mute}
shift + super + v
    pavucontrol
shift + super + w
    paswitch

### Music Player ###
XF86Audio{Play,Prev,Next}
    audio{play,prev,next}
XF86AudioStop
    mpcnowplaying
shift + super + {x,z,c}
    audio{play,prev,next}
shift + super + o
    mpcnowplaying
shift + super + XF86Launch{1,2}
    audio{next,down}
shift + super + button2
    audioplay
shift + super + button{4,5}
    volcontrol {up,down}
XF86Launch{1,2}
    xdotool key Ctrl{+,+Shift+}Tab

### Shortcuts ###
super + g
    xterm
@Print
    scrot -s -e 'mv $f ~/screenshots/ 2>/dev/null'
shift + Print
    scrot -e 'mv $f ~/screenshots/ 2>/dev/null'
XF86Display
    monswitch
super + p
    monswitch
XF86{Kbd,Mon}Brightness{Up,Down}
    sudo {key,back}light {up,down}
XF86TouchpadToggle
    touchpad-toggle
ctrl + super + a
    keepassautotype
super + d
    rofi -show combi
super + e
    emacsclient -a '' -c -n -e '(switch-to-buffer nil)'
super + {a, x, c, v, w, t, z, b, s}
    key={a,x,c,v,w,t,z,b,s}; \
    xte "keyup Super_L" "keyup ${key}" "keydown Control_L" "key ${key}" "keyup Control_L" "keydown Super_L"
