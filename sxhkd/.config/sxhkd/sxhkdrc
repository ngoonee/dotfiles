    scrot -s -e 'mv $f ~/screenshots/ 2>/dev/null'
XF86Display
    monswitch
super + p
    monswitch
XF86{Kbd,Mon}Brightness{Up,Down}
    sudo {key,back}light {up,down}
XF86TouchpadToggle
    touchpad-toggle
ctrl + alt + a
    keepassautotype
XF86Calculator
    light-locker-command -l
super + d
    dmenu_run -i -b -l 10
